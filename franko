        let currentLanguage = 'en';

        // Language toggle functionality
        document.getElementById('language-btn').addEventListener('click', function() {
            currentLanguage = currentLanguage === 'es' ? 'en' : 'es';
            updateLanguage();
        });

        function updateLanguage() {
            const lang = translations[currentLanguage];
            
            // Update language button
            document.getElementById('language-btn').textContent = lang.langBtn;
            
            // Update day buttons
            const dayButtons = document.querySelectorAll('.day-btn:not(#language-btn)');
            dayButtons.forEach((btn, index) => {
                btn.textContent = lang.days[index];
            });
            
            // Update meal titles
            document.querySelectorAll('.meal-title').forEach(title => {
                const text = title.textContent;
                if (text.includes('Buffet Matutino') || text.includes('Morning Buffet')) {
                    title.textContent = lang.meals.breakfast;
                } else if (text.includes('Almuerzo') || text.includes('Lunch')) {
                    title.textContent = lang.meals.lunch;
                } else if (text.includes('Cena') || text.includes('Dinner')) {
                    title.textContent = lang.meals.dinner;
                }
            });
            
            // Update dish names and descriptions
            document.querySelectorAll('.dish-name').forEach(dishName => {
                const originalName = dishName.textContent;
                if (lang.dishes[originalName]) {
                    const dishCard = dishName.closest('.dish-card');
                    const description = dishCard.querySelector('.dish-description');
                    if (description) {
                        if (currentLanguage === 'es') {
                            // Switch to Spanish - dish name stays the same, description changes to Spanish
                            description.textContent = lang.dishes[originalName];
                        } else {
                            // Switch to English - description changes to English
                            description.textContent = lang.dishes[originalName];
                        }
                    }
                }
            });
            
            // Update subtitle
            const subtitleElement = document.getElementById('restaurant-subtitle');
            if (subtitleElement) {
                subtitleElement.textContent = lang.subtitle;
            }
            
            // Update footer
            const footerTexts = document.querySelectorAll('.footer p');
            if (footerTexts.length > 1) {
                footerTexts[1].textContent = lang.footer;
            }
            
            // Update allergies label and placeholder
            const allergiesLabel = document.getElementById('allergies-label');
            if (allergiesLabel) {
                allergiesLabel.textContent = lang.allergiesLabel;
            }
            
            const allergiesTextarea = document.getElementById('allergies');
            if (allergiesTextarea) {
                allergiesTextarea.placeholder = lang.allergiesPlaceholder;
            }
        }

        // Day navigation functionality
        let currentDay = 'lunes';

        document.querySelectorAll('.day-btn:not(#language-btn)').forEach(btn => {
            btn.addEventListener('click', function() {
                // Remove active class from all day buttons
                document.querySelectorAll('.day-btn:not(#language-btn)').forEach(b => b.classList.remove('active'));
                
                // Add active class to clicked button
                this.classList.add('active');
                
                // Hide all day content
                document.querySelectorAll('.day-content').forEach(content => {
                    content.classList.add('hidden');
                });
                
                // Show selected day content
                const selectedDay = this.dataset.day;
                const dayContent = document.querySelector(`.day-content[data-day="${selectedDay}"]`);
                if (dayContent) {
                    dayContent.classList.remove('hidden');
                }
                
                currentDay = selectedDay;
            });
        });

        // Add smooth scrolling for better UX
        document.querySelectorAll('.day-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                setTimeout(() => {
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                }, 100);
            });
        });
    </script>
